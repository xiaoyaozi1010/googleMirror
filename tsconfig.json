{
    "compilerOptions": {
        "outDir": "./js/",
        "allowJs": true,
        "module": "es2015",
        "target": "ES5",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ],
        "typeRoots": [
            "./typings"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.js"
    ],
    "include": [
        "src/*.ts",
        "src/*.tsx"
    ]
}